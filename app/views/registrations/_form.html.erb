<div class='well'>
 <%=form_for user, url: signup_path do |f| %>
 <div class='control-group'>
   <%= f.text_field :name, placeholder: "Username" %>
 </div>
 <div class='control-group'>
   <%= f.text_field :email, placeholder: "E-mail" %>
 </div>
 <div class='control-group'>
   <%= f.password_field :password, placeholder: "Create a Password" %>
 </div>
 <div class='control-group'>
   <%= f.password_field :password_confirmation, placeholder: "Confirm New Password" %>
 </div>
   <%= f.submit "Create User", class: 'btn-btn-primary'%>
 <% end %>
