<div class='well'>
  <%= form_tag "/login" do %>
   <div class='control-group'>
     <%= label_tag :name %>
     <%= text_field_tag :name, params[:name] %>
   </div>
     <br>
   <div class='control-group'>
     <%= label_tag  :password %>
     <%= password_field_tag  :password, params[:password]%>
   </div>
    <br>
   <%= submit_tag "Submit", class: 'btn-btn-primary'%>
  <% end %>
</div>