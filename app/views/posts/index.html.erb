<h1>Latest News From Your Network</h1><Br><br>

<% @posts_by_user.each do |post| %>
  <%= render partial: 'thumbnail', locals: {post: post} %>
  <% if post.user == current_user %>
  <%= link_to "Edit", edit_post_path(post) %>
  <% end %>
  <%#= post.title %>
  <br>
  <%#= link_to post.get_poster_name, user_path(post.user) %>
  <%#= link_to " posted " + post.get_post_date, post_path(post) %>
  <br>
  <% end %>

<%= will_paginate @posts_by_user %>
