<h1>Welcome, <%= current_user.name %>!</h1>

<ul>
<% if current_user.has_followers? %>
	<h2>Your Followers</h2>
	<% current_user.followers.each do |follower| %>
		<li><%= link_to follower.name, user_path(follower) %></li>
	<% end %>
</ul>
<% else %>
	<h2>Nobody is Following You! ğŸ˜ Time to Go to Cool School! ğŸ˜</h2>
<% end %>

<!-- if current user is following people -->
<% if current_user.has_following? %>
	<h2>People You're Following</h2>
	<ul>
	<% current_user.following.each do |following| %>
		<li><%= link_to following.name, user_path(following) %></li>
	<% end %>
</ul>
<% else %>
	<h2>You Aren't Following Anybody! ğŸ˜ Go Find Buddies! ğŸ˜</h2>
<% end %>

<% if current_user.posts.size < 0 %>
	<h2><%= current_user.name %>'s Posts</h2>
	<% current_user.posts.each do |post| %>
		<div>
			<%= link_to post.title, post.link, target: "_blank" %>
		  <h3>Tags for this Post:</h3>
			<% post.tags.each do |tag| %>
  			<li><%= tag.name %></li>
			<% end %>
			<h3>Comments</h3>
			<ul id="Comments">
			<% post.comments.each do |comment| %>
				<li><%= comment.message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
<% else %>
<h2>You haven't posted anything.</h2>
<h2>Make a Post</h2>
<%= render partial: 'posts/form', locals: {post: Post.new} %>
<% end %>

<h2>Edit Your Profile</h2>
<%= render partial: 'form', locals: {user: current_user} %>


