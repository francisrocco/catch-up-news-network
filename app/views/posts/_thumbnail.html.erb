
<style>
.thumbnail{
    position: relative;
    width: 450px;
    height: 300px;
    overflow: auto;
    background: lightgray;
    border: 1px solid black;
}

a {
    color:black;
    text-decoration:none;
}

.image{
  position: absolute;
  width: 450px;
  max-height:250px;
  overflow: hidden;
}

.headline{
    position: absolute;
    opacity: 0.75;
    bottom:0;
    background: gray;
    width: 100%;
}

.caption{
  position: absolute;
  bottom:0;
}
</style>



<div class='thumbnail'>
  <a target="_blank" href="<%= @post.link %>">
  <div class='image'>
    <img src="<%= @post.image %>" width="450">
      <div class='headline'>
          <div class='short' color='black'><h3><%= @post.post_title %></h3></div>
      </div>
    </div>
    <div class='caption'>
      <%= @post.description %>
    </div>
    </a>
</div>
