<div>
  <%= form_tag "/login" do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name] %>
    </div>
     <br>
    <div>
      <%= label_tag  :password %>
      <%= password_field_tag  :password, params[:password]  %>
    </div>
      <br>
      <%= submit_tag "Submit" %>
  <% end %>
</div>