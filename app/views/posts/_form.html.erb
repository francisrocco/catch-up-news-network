<%= form_for(@post) do |f| %>
  <%= f.text_area :title, placeholder: "Title" %><br>
  <%= f.text_area :link, placeholder: "Link" %><br>
    <div class="field">
      <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
      <%= f.fields_for(:tags, Tag.new) do |tag_form| %>
        <p>Add a new tag:</p><br>
        <%= tag_form.label :name %>
        <%= tag_form.text_field :name %>
      <% end %>
    </div>
  <%= f.submit %>
<% end %>
