
<style>

.thumbnail{
    position: relative;
    /* image 450px + 1px margin-R + 1px margin-R + 1px padding-R + 1px padding-L = 454px */
    /* gets rid of icky side scrolling */
    width: 454px;
    /*height: 330px;*/
    height: 28em; /* using ems because they scale acc. to font size */
    background: #e5eff3;
    border: 1px solid black;
    padding: 1px;
}

.edit_button{
  position: absolute;
  top: 0;
  left: 420px;
  padding : 10px;
}

.delete_button{
  position: absolute;
  top: 0;
  left: 0;
  padding : 10px;
}

.comments{
  position: absolute;
  bottom: 10px;
  left: 400px;
  padding: 10px;
}

.poster {
  /*position: absolute;*/
  text-align: center;
  padding: 2px;
  margin: 0;
}

a {
    color:black;
    text-decoration:none;
}

.image{
  position: absolute;
  width: 450px;
  max-height:235px;
  overflow: hidden;
}

.headline{
    position: absolute;
    opacity: 0.55;
    bottom:0;
    background: white;
    width: 100%;
    padding: 10px;
}

.bottom-portion{
  position: absolute;
  bottom:0px;
  padding: 5px 10px;
  width: 450px;
  max-height:95px;
  overflow: visible;
}

.caption {
  position: absolute;
  bottom: 45px;
}

.button {
    background-color: #b3b3cc;
    border: none;
    color: white;
    padding: 1% 3%;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 32px;
}

</style>
<div class='thumbnail'>
  &nbsp
  <div class="poster">

    <div class="edit_button" >
    <% if post.user.id == current_user.id %>
      <%= link_to "", edit_post_path(post), class: 'glyphicon glyphicon-wrench' %>
    <% end %>
    </div>
    <div class="delete_button" >
    <% if post.user.id == current_user.id %>
      <%= link_to "", post_path(post), method: :delete, class: 'glyphicon glyphicon-trash' %>
    <% end %>
    </div>
  <%= link_to post.get_poster_name, user_path(post.user) %>
  <%= link_to " posted " + post.get_post_date, post_path(post) %>
  </div>
  <br>
  <a target="_blank" href="<%= post.link %>">

    <div class='image'>
      <img src="<%= post.image %>" width="450">
        <div class='headline'>
            <div class='short' color='black'><h3><%= post.post_title %></h3></div>
        </div>
    </div>




  <div class="caption">
    <%= post.description %><br>
  </div>
 <div class='vote-arrows pull-left bottom-portion'>
     <div class='comments'>
      <%= link_to "", post_path(post), class: 'glyphicon glyphicon-comment' %>&nbsp<strong><%= post.comments.count %></strong>
    </div>
    <%= link_to post_up_vote_path(post), method: :post, remote: true, id: "myupToolTip", :title => "", :"data-toggle" => "tooltip", :"data-placement" => "top" , :'data-original-title' => post.pos_users.map(&:name).to_sentence do %>
      <span class= "glyphicon glyphicon-thumbs-up"> </span>
    <% end %>
      &nbsp
    <span id='post_<%=post.id %>_votes'>
      <strong><%= post.total_votes %></strong>
    </span>
      &nbsp
   <%= link_to post_down_vote_path(post), method: :post, remote: true, id: "mydownToolTip", :title => "", :"data-toggle" => "tooltip", :"data-placement" => "top" , :'data-original-title' => post.neg_users.map(&:name).to_sentence do %>
      <span class= "glyphicon glyphicon-thumbs-down"> </span>
    <% end %>
    &nbsp
      <% post.tags.each do |tag| %>
        <a href="/tags/<%= "#{tag.id}" %>"><button class="button"><%= "#{tag.name}" %></button></a>
      <% end %>
    </div>
  </a>

</div>
